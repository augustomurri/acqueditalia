{% extends 'base.html.twig' %}

{% block title %}Erogazioni{% endblock %}

{% block body %}

    <!-- Main Container -->
    <main id="main-container">
        <!-- Hero -->
        <div class="bg-body-light">
            <div class="content content-full">
                <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center py-2">
                    <div class="flex-grow-1">
                        <h1 class="h3 fw-bold mb-2">
                            Erogazioni
                        </h1>
                        <h2 class="fs-base lh-base fw-medium text-muted mb-0">
                            Elenco di tutte le le erogazioni nelle stazioni in gestione
                        </h2>
                    </div>
                    <nav class="flex-shrink-0 mt-3 mt-sm-0 ms-sm-3" aria-label="breadcrumb">
                        {{ wo_render_breadcrumbs() }}
                    </nav>
                </div>
            </div>
        </div>
        <!-- END Hero -->

        <!-- Page Content -->
        <div class="content">

            <div class="block block-rounded">
                <div class="block-header block-header-default">
                    <h3 class="block-title"><small>Elenco erogazioni</small></h3>
                </div>
                <div class="block-content block-content-full">

                    {% if erogazioni is defined %}
                        <table class="table table-hover table-vcenter">
                            <thead>
                            <tr>
                                <th>{{ knp_pagination_sortable(erogazioni, 'Data ora', 'e.created_ad') }}</th>
                                <th class="d-none d-sm-table-cell">Stazione</th>
                                <th class="d-none d-sm-table-cell">Comune</th>
                                <th class="d-none d-sm-table-cell">Tessera</th>
                                <th class="d-none d-sm-table-cell">Prodotto</th>
                                <th class="d-none d-sm-table-cell">Quantita</th>
                                <th class="d-none d-sm-table-cell">Costo</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for erogazione in erogazioni %}
                                <tr>
                                    <td class="text-muted fs-sm">{{ erogazione.createdAt|date() }}</td>
                                    <td class="fw-semibold fs-sm">
                                        {{  erogazione.stazione.nome }}
                                    </td>
                                    <td>
                                        {{  erogazione.stazione.comune }}
                                    </td>
                                    <td>
                                        {{  erogazione.tessera.codiceTessera }}
                                    </td>
                                    <td>
                                        {{  erogazione.prodotto.nome }}
                                    </td>
                                    <td>
                                        {{  erogazione.quantita }}
                                    </td>
                                    <td>
                                        {{  erogazione.costo }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {{ knp_pagination_render(erogazioni) }}
                    {% endif %}

                </div>
            </div>

        </div>
        <!-- END Page Content -->
    </main>
    <!-- END Main Container -->

{% endblock %}
